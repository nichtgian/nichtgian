{
    "tasks": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "prepare": "svelte-kit sync || echo ''",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "imports": {
        "@sveltejs/adapter-static": "npm:@sveltejs/adapter-static@^3.0.8",
        "@sveltejs/kit": "npm:@sveltejs/kit@^2.16.0",
        "@sveltejs/vite-plugin-svelte": "npm:@sveltejs/vite-plugin-svelte@^5.0.0",
        "@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.15",
        "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.0.0",
        "@inlang/paraglide-js": "npm:@inlang/paraglide-js@^2.0.0",
        "flowbite": "npm:flowbite@^3.1.2",
        "flowbite-svelte": "npm:flowbite-svelte@^1.0.0-next.9",
        "flowbite-svelte-blocks": "npm:flowbite-svelte-blocks@^1.1.4",
        "flowbite-svelte-icons": "npm:flowbite-svelte-icons@^2.1.1",
        "svelte": "npm:svelte@^5.0.0",
        "svelte-check": "npm:svelte-check@^4.0.0",
        "tailwind-variants": "npm:tailwind-variants@^1.0.0",
        "tailwindcss": "npm:tailwindcss@^4.0.0",
        "typescript": "npm:typescript@^5.0.0",
        "vite": "npm:vite@^6.2.5"
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 120,
        "indentWidth": 4,
        "singleQuote": true,
        "proseWrap": "always"
    },
    "nodeModulesDir": "auto",
    "unstable": ["fmt-component"]
}
